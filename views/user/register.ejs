<%- include('../partials/header.ejs', {title: 'Register'}) %>
<br>
    <div class="container mt-4">
        <% if (alert) { %>
            <% alert.split(',').forEach(el => { %>
                <div class="alert alert-danger" role="alert">
                    <%= el %>  
                </div>
            <% }) %> 
        <%  } %>
        
        
        <form action="/users/register" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" name="username" id="username" class="form-control" placeholder="e.g: John Doe">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control">
                <i>password must be alphanumeric</i>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="johndoe@mail.com">
            </div>
            <div class="form-group">
                <label for="phone_number">Phone Number</label>
                <input type="text" name="phone_number" id="phone_number" class="form-control" placeholder="081XXXXXXXX">
            </div>

            <button class="btn btn-success" type="submit">Register</button>
            <button class="btn btn-danger" type="reset">Reset</button>
        </form>
    </div>
</body>
</html>