<%- include('../partials/header.ejs', {title: 'Add A Book'}) %> 
<br>
<a href="/books" class="btn btn-primary">Back to List</a>
<br>
<% if (alert) { %>
    <% alert.split(',').forEach(el => { %>
        <div class="alert alert-danger" role="alert">
            <%= el %>  
        </div>
    <% }) %> 
<%  } %>
<form action="/books/add" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control" placeholder="Now You See Me">
    </div>
    <div class="form-group">
        <label for="genre">Genre</label>
        <input type="text" name="genre" id="genre" class="form-control" placeholder="Drama, Comedy, Horror">
    </div>
    <div class="form-group">
        <label for="url">Image URL</label>
        <input type="text" name="url" id="url" class="form-control" placeholder="http://arah.in/pj-2">
    </div>
    <div class="form-group">
        <label for="released_year">Released Year</label>
        <input type="text" name="released_year" id="released_year" class="form-control" placeholder="2020">
    </div>
    <div class="form-group">
        <label for="AuthorId">Author</label>
        <select name="AuthorId" id="AuthorId" class="form-control"> 
            <option value="" selected>Select Here</option>
            <%data.forEach(element=>{%>
                <option value="<%=element.id%>"><%=element.fullName()%></option>
            <%})%>
        </select>
    </div>
    <button class="btn btn-success" type="submit">Add Book</button>
    <button class="btn btn-danger" type="reset">Reset</button>
</form>

</div>
</body>
</html>