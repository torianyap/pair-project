<%- include('../partials/header.ejs', {title: 'List of Books'}) %> 
<br> 
    <div class="container">
    <br>
    <a href="/books/add" class="btn btn-primary" <%= author ? '' : 'hidden' %> >Add a book</a>
    <br> <br>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Genre</th>
                <th scope="col">Released Year</th>
                <th scope="col">Author</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(el => { %>
                <tr>
                    <td>
                        <%= el.title %>
                    </td>
                    <% const genre = el.genre.substring(1, el.genre.length-1).split(',') %> 
                    <td>
                        <ul class="list-group">
                        <% genre.forEach (element => { %>
                            <li class="list-group-item"><%= element %> </li>
                        <% }) %> 
                    </ul>
                    </td>
                    <td><%= el.released_year %></td>
                    <td><%= el.Author.fullName() %> </td>
                    <td>
                        <a class="btn btn-primary" href="/books/<%= el.id %>/edit" <%= author ? '' : 'hidden' %>>Edit</a>
                        <a class="btn btn-danger" href="/books/<%= el.id %>/delete" <%= author ? '' : 'hidden' %>>Delete</a>
                        <a class="btn btn-info" href="/users/<%= username %>/<%= el.id %>">Borrow</a>
                    </td>
                </tr>
            <% }) %> 
        </tbody>
    </table>
    </div>
</body>
</html>